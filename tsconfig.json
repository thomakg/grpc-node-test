{
    "compilerOptions": {
      "module": "commonjs",
      "noImplicitAny": true,
      "removeComments": true,
      "preserveConstEnums": true,
      "sourceMap": true,
      "target": "es2017",
      "allowJs": true,
      "noEmit": true,
      "outDir": "."
    },
    "include": [
      "./notrelevant/node/**/*"
    ],
    "exclude": [
      "./node_modules"
    ]
  }
  